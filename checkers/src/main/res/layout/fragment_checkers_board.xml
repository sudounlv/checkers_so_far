<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.unlv.sudo.checkers.CheckersBoard$PlaceholderFragment">

    <edu.unlv.sudo.checkers.views.BoardView
        android:id="@+id/checkers_board"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <TextView
        android:id="@+id/checkers_turn"
        android:text="@string/status_turn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/checkers_board"
        android:layout_alignRight="@id/checkers_board"/>

</RelativeLayout>
